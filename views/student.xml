<openerp>
    <data>
        <record id="student_tree_view" model="ir.ui.view">
            <field name="name">student.tree_view</field>
            <field name="model">python_odoo8_module.student</field>
            <field name="arch" type="xml">
                <tree string="Listado estudiantes">
                    <field name="name"/>
                    <field name="age"/>
                    <field name="card"/>
                    <field name="email"/>
                    <field name="grade"/>
                    <field name="section"/>
                </tree>
            </field>
        </record>

        <record id="student_form_view" model="ir.ui.view">
            <field name="name">student.form_view</field>
            <field name="model">python_odoo8_module.student</field>
            <field name="arch" type="xml">
                <form string="informacion personal">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="photo" widget="image"/>
                            <field name="age"/>
                            <field name="card" readonly="1"/>
                            <field name="email"/>
                            <field name="grade"/>
                            <field name="section"/>
                            <field name="subject_ids"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_actions" model="ir.actions.act_window">
            <field name="name">Estudiantes</field>
            <field name="res_model">python_odoo8_module.student</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>
