<odoo>
    <record id="subject_tree_view" model="ir.ui.view">
        <field name="name">subject.tree_view</field>
        <field name="model">schoolModule.subject</field>
        <field name="arch" type="xml">
            <tree string="Listado materias">
                <field name="name"/>
                <field name="classroom_id"/>
            </tree>
        </field>
    </record>

    <record id="subject_form_view" model="ir.ui.view">
        <field name="name">subject.form_view</field>
        <field name="model">schoolModule.subject</field>
        <field name="arch" type="xml">
            <form string="Informacion de materia">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="classroom_id"/>
                        <field name="student_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="subject_actions" model="ir.actions.act_window">
        <field name="name">Materias</field>
        <field name="res_model">schoolModule.subject</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
